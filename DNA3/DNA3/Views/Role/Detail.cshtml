@model Role
@{
	Layout = "_Dashboard";
	string Title = "Role";
}
@section CSS {

}
@section Scripts {

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>@Title Detail</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
						<li class="breadcrumb-item active">@Title Detail</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<partial name="_Messages" />
			<div class="row">
				<!-- left column -->
				<div class="col-md-6">
					<!-- general form elements -->
					<div class="card card-primary">
						<div class="card-header">
                            <h3 class="card-title">@Title</h3>
							<div class="card-tools">
								<button asp-action="Save" form="Master" class="btn btn-tool btn-sm">
									<i class="far fa-floppy-disk" title="Save"></i>
								</button>
								<button asp-action="Delete" form="Master" class="btn btn-tool btn-sm">
									<i class="far fa-trash-can" title="Delete"></i>
								</button>
								<a href="/report/viewer.html?Report=Role.rdl" class="btn btn-tool btn-sm" target="_blank">
									<i class="fas fa-print" title="Print"></i>
								</a>
								<a asp-action="Close" class="btn btn-tool btn-sm">
									<i class="fas fa-xmark" title="Close"></i>
								</a>
							</div>
						</div>
						<!-- /.card-header -->
						<!-- form start -->
						<form asp-action="#" id="Master">
							<div class="card-body">
								<div class="row mb-0">
									<div class="col-md-6">
										<div class="form-group">
											<label asp-for="Code">@Html.DisplayNameFor(x => x.Code)</label>
											<input asp-for="Code" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Code)" autofocus>
											<span asp-validation-for="Code" class="text-danger small"></span>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label asp-for="Name">@Html.DisplayNameFor(x => x.Name)</label>
											<input asp-for="Name" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Name)">
											<span asp-validation-for="Name" class="text-danger small"></span>
										</div>
									</div>
								</div>
								<div class="row mb-0">
									<div class="col">
										<div class="form-group">
											<label asp-for="Description">@Html.DisplayNameFor(x => x.Description)</label>
											<input asp-for="Description" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Description)">
											<span asp-validation-for="Description" class="text-danger small"></span>
										</div>
									</div>
								</div>
							</div>
							<!-- /.card-body -->
							<input asp-for="RoleId" type="hidden" />
						</form>
					</div>
					<!-- /.card -->
				</div>
				<!-- / Left Column -->
			</div>
			<!-- / Row -->
		</div>
		<!-- Container Fluid -->
	</section>
</div>
<!-- / Content Wrapper -->
