@model IList<Client>
@{
	Layout = "_Dashboard";
	string Title = "Client";
}
@section CSS {

}
@section Scripts {

	<script>

        function ClientGridRowSelected(args) {
            window.location.href = '@Url.Action("Edit", "Client")/' + args.data.ClientId;
        }

        function ExportToExcel() {
            var gridObj = document.getElementById("ClientGrid").ej2_instances[0];
            gridObj.excelExport();
        }

        function ExportToPDF() {
            var gridObj = document.getElementById("ClientGrid").ej2_instances[0];
            gridObj.pdfExport();
        }

	</script>

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>@Title Manager</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
						<li class="breadcrumb-item active">Menu Manager</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<partial name="_Messages" />
		<div class="card card-primary">
			<div class="card-header border-0">
				<h3 class="card-title">Clients</h3>
				@await Html.PartialAsync("_Tools", new { Report = "Clients.trdp" })
			</div>
			<div class="card-body">
				@if (Model.Count() == 0) {
					<emptyresult icon="fa-solid fa-user-tie"></emptyresult>
				} else {
                    <ejs-grid id="ClientGrid" dataSource="@Model" allowExcelExport="true" allowPdfExport="true" allowPaging="true" allowSorting="true" rowSelected="ClientGridRowSelected">
                        <e-grid-selectionsettings mode="Row"></e-grid-selectionsettings>
                        <e-grid-columns>
                            <e-grid-column field="Company" headerText="Company" textAlign="Left" width="120"></e-grid-column>
                            <e-grid-column field="City" headerText="City" textAlign="Left" width="120"></e-grid-column>
                            <e-grid-column field="Phone" headerText="Phone"></e-grid-column>
                        </e-grid-columns>
                    </ejs-grid>
				}
			</div>
		</div>
	</section>
</div>
<!-- /.content-wrapper -->