@model IList<DNA3.Models.Action>
@{
	Layout = "_Dashboard";
	string Title = "Action";
}
@section CSS {

}
@section Scripts {

	<script>
        function ActionGridRowSelected(args) {
            window.location.href = '@Url.Action("Edit", "Action")/' + args.data.ActionId;
        }

        function ExportToExcel() {
            var gridObj = document.getElementById("ActionGrid").ej2_instances[0];
            gridObj.excelExport();
        }

        function ExportToPDF() {
            var gridObj = document.getElementById("ActionGrid").ej2_instances[0];
            gridObj.pdfExport();
        }
    </script>

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>@Title Manager</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
						<li class="breadcrumb-item active">Menu Manager</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<partial name="_Messages" />
		<div class="card card-primary">
			<div class="card-header border-0">
				<h3 class="card-title">Actions</h3>
				@await Html.PartialAsync("_Tools", new { Report = "Actions.trdp" })
			</div>
			<div class="card-body">
				@if (Model.Count() == 0) {
					<emptyresult icon="fa-solid fa-tag"></emptyresult>
				} else {
                    <ejs-grid id="ActionGrid" dataSource="@Model" allowExcelExport="true" allowPdfExport="true" allowPaging="true" allowSorting="true" rowSelected="ActionGridRowSelected">
                        <e-grid-selectionsettings mode="Row"></e-grid-selectionsettings>
                        <e-grid-columns>
                            <e-grid-column field="Name" headerText="Name" textAlign="Left" width="120"></e-grid-column>
                            <e-grid-column field="Weight" headerText="Weight" textAlign="Left" width="120"></e-grid-column>
                        </e-grid-columns>
                    </ejs-grid>
				}
			</div>
		</div>
	</section>
</div>
<!-- /.content-wrapper -->
<!-- Report Options Dialog -->
<partial name="_Options" />