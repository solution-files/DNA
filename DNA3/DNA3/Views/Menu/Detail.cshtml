@model DNA3.Models.Menu
@{
	Layout = "_Dashboard";
	string Title = "Menu";
}

@section CSS {
	<link href="~/common/plugins/fontawesome-iconpicker/css/fontawesome-iconpicker.css" rel="stylesheet" type="text/css" />
}

@section Scripts {

	<!-- Automated Form Validation -->
	<script src="~/common/plugins/jquery-validate/jquery.validate.min.js"></script>
	<script src="~/common/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

	<!-- Font Awesome Icon Picker -->
	<script src="~/common/plugins/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js"></script>
	<script>
		$('#Icon').iconpicker({
			container: false,
			hideOnSelect: true,
			placement: 'bottom'
		});
	</script>

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>@Title Detail</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
						<li class="breadcrumb-item active">@Title Detail</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<partial name="_Messages" />
			<div class="row">
				<!-- left column -->
				<div class="col-md-6">
					<!-- general form elements -->
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">@Title</h3>
							<div class="card-tools">
								<button asp-action="Save" form="Master" class="btn btn-tool btn-sm">
									<i class="far fa-floppy-disk"></i>
								</button>
								<button asp-action="Delete" form="Master" class="btn btn-tool btn-sm">
									<i class="far fa-trash-can"></i>
								</button>
								<button asp-controller="Action" asp-action="Index" asp-route-id="@Model.MenuId" form="Master" class="btn btn-tool btn-sm">
									<i class="fas fa-link"></i>
								</button>
								<a href="/report/viewer.html?Report=Menu.trdp" formaction="Master" class="btn btn-tool btn-sm" target="_blank">
									<i class="fas fa-print"></i>
								</a>
								<a asp-action="Index" class="btn btn-tool btn-sm">
									<i class="fas fa-xmark"></i>
								</a>
							</div>
						</div>
						<!-- /.card-header -->
						<!-- form start -->
						<form asp-action="#" id="Master">
							<div class="card-body">
								<div class="row mb-0">
									<div class="col-lg-6">
										<div class="form-group">
											<label asp-for="Icon">@Html.DisplayNameFor(x => x.Icon)</label>
											<input asp-for="Icon" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Icon)" autocomplete="off" spellcheck="false">
											<span asp-validation-for="Icon" class="text-danger small"></span>
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form-group">
											<label asp-for="Code">@Html.DisplayNameFor(x => x.Code)</label>
											<input asp-for="Code" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Code)" autocomplete="off" spellcheck="false">
											<span asp-validation-for="Code" class="text-danger small"></span>
										</div>
									</div>
								</div>
								<div class="row mb-0">
									<div class="col-lg-6">
										<div class="form-group">
											<label asp-for="Name">@Html.DisplayNameFor(x => x.Name)</label>
											<input asp-for="Name" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Name)">
											<span asp-validation-for="Name" class="text-danger small"></span>
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form-group">
											<label asp-for="Description">@Html.DisplayNameFor(x => x.Description)</label>
											<input asp-for="Description" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Description)">
											<span asp-validation-for="Description" class="text-danger small"></span>
										</div>
									</div>
								</div>
								<div class="row mb-0">
									<div class="col-lg-6">
										<div class="form-group">
											<label asp-for="Target">@Html.DisplayNameFor(x => x.Target)</label>
											<input asp-for="Target" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Target)">
											<span asp-validation-for="Target" class="text-danger small"></span>
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form-group">
											<label asp-for="TargetName">@Html.DisplayNameFor(x => x.TargetName)</label>
											<input asp-for="TargetName" class="form-control" placeholder="@Html.DisplayNameFor(x => x.TargetName)">
											<span asp-validation-for="TargetName" class="text-danger small"></span>
										</div>
									</div>
								</div>
								<div class="row mb-0">
									<div class="col-lg-4">
										<div class="form-group">
											<label asp-for="Weight">@Html.DisplayNameFor(x => x.Weight)</label>
											<input asp-for="Weight" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Weight)">
											<span asp-validation-for="Weight" class="text-danger small"></span>
										</div>
									</div>
								</div>
							</div>
							<!-- /.card-body -->
							<input asp-for="MenuId" type="hidden" />
						</form>
					</div>
					<!-- /.card -->
				</div>
				<!-- / Left Column -->
			</div>
			<!-- / Row -->
		</div>
		<!-- Container Fluid -->
	</section>
</div>
<!-- / Content Wrapper -->
