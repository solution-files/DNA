@model IList<DNA3.Models.AppointmentData>
@{
    Layout = "_Dashboard";
    string Title = "Appointment";
    string Plural = "Appointments";
}
@section CSS {

}
@section Scripts {

    <script>

        function ExportToExcel() {
            var schedulerObj = document.getElementById("schedule").ej2_instances[0];
            schedulerObj.excelExport();
        }

        function ExportToPDF() {
            var schedulerObj = document.getElementById("schedule").ej2_instances[0];
            schedulerObj.pdfExport();
        }

    </script>

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Title Manager</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@Title Manager</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <partial name="_Messages" />
        <div class="card card-primary">
            <div class="card-header border-0">
                <h3 class="card-title">@Plural</h3>
                @await Html.PartialAsync("_Tools", new { Report = "Schedule.rdl" })
            </div>
            <div class="card-body">
                <ejs-schedule id="schedule">
                    <e-schedule-eventsettings dataSource="Model"></e-schedule-eventsettings>
                </ejs-schedule>
            </div>
        </div>
    </section>
</div>
<!-- /.content-wrapper -->
<!-- Report Options Dialog -->
<partial name="_Options" />