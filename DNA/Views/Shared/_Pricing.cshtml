@{
	Page ProductsPage = (Page)ViewBag.ProductsPage;
}
<!-- ====== Pricing Start ====== -->
<section id="pricing" class="ud-pricing">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="ud-section-title mx-auto text-center">
					<span>Pricing</span>
					<h2>
						@Html.Render(ProductsPage.Subject)
						<vc:edit-icon controller="Page" action="Edit" id="@ViewBag.ProductsPage.PageId" css="text-primary" title="Edit This Page"></vc:edit-icon>
					</h2>
					<p>
						@Html.Render(ProductsPage.Content)
					</p>
				</div>
			</div>
		</div>

		<div class="row g-0 align-items-center justify-content-center">
			<div class="col-lg-4 col-md-6 col-sm-10">
				<div class="ud-single-pricing first-item wow fadeInUp"
					 data-wow-delay=".15s">
					<div class="ud-pricing-header">
						<h3>STARTING FROM</h3>
						<h4>$ 0.00/mo</h4>
					</div>
					<div class="ud-pricing-body">
						<ul>
							<li>No Domain Name</li>
							<li>5GB Website</li>
							<li>1GB Database</li>
							<li>No E-Mail</li>
							<li>EU Datacenter</li>
							<li>Limited Traffic</li>
						</ul>
					</div>
					<div class="ud-pricing-footer">
						<a asp-controller="Products" asp-action="Detail" asp-route-id="10000" class="ud-main-btn ud-border-btn">
							Purchase Now
						</a>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 col-sm-10">
				<div class="ud-single-pricing active wow fadeInUp"
					 data-wow-delay=".1s">
					<span class="ud-popular-tag">POPULAR</span>
					<div class="ud-pricing-header">
						<h3>STARTING FROM</h3>
						<h4>$ 99.99/mo</h4>
					</div>
					<div class="ud-pricing-body">
						<ul>
							<li>10 Users</li>
							<li>Private Server</li>
							<li>Security Certificates</li>
							<li>10GB Database</li>
							<li>Use by 3 (three) companies</li>
							<li>Priority support</li>
						</ul>
					</div>
					<div class="ud-pricing-footer">
						<a asp-controller="Products" asp-action="Detail" asp-route-id="10001" class="ud-main-btn ud-border-btn">
							Purchase Now
						</a>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 col-sm-10">
				<div class="ud-single-pricing last-item wow fadeInUp"
					 data-wow-delay=".15s">
					<div class="ud-pricing-header">
						<h3>STARTING FROM</h3>
						<h4>$ 129.99/mo</h4>
					</div>
					<div class="ud-pricing-body">
						<ul>
							<li>Unlimited Usera</li>
							<li>Private Server</li>
							<li>Security Certificates</li>
							<li>Unlimited Database</li>
							<li>Unlimited Companies</li>
							<li>Priority support</li>
						</ul>
					</div>
					<div class="ud-pricing-footer">
						<a asp-controller="Products" asp-action="Detail" asp-route-id="10002" class="ud-main-btn ud-border-btn">
							Purchase Now
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- ====== Pricing End ====== -->