@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	Layout = "_Dashboard";
	string Title = "Download Help";
}
@section CSS {

}

@section Scripts {

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>SQL Server Management Objects</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
						<li class="breadcrumb-item active">@Title</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<partial name="_Messages" />

		<div class="callout callout-info">
			<h5><i class="fas fa-info"></i> Note:</h5>
			This page has been enhanced for printing. Click the print button at the bottom of the page to test.
		</div>

		<div class="row">
			<div class="col-lg-6">
				<div class="card card-primary">
					<div class="card-header border-0">
						<h3 class="card-title">@Title</h3>
						<div class="card-tools">
							<a asp-action="Index" class="btn btn-tool btn-sm">
								<i class="fas fa-xmark" title="Close"></i>
							</a>
						</div>
					</div>
					<div class="card-body">
						<p>From this page you can see a list of all the files that were created during each backup operation. Downloading them up to disk is fast and easy:</p>
						<ol>
							<li class="mb-2">Click on the name of each file you'd like to download.</li>
							<li class="mb-2">Navigate to the folder where you'd like the file to be stored and click OK'</li>
							<li class="mb-2">Wait for the download to complete, then proceed to the next file.</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
<!-- /.content-wrapper -->